    style.
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
          background-color: #f2f2f2; /* Background color */
      }

      .container {
          max-width: 800px;
          margin: 20px auto;
          padding: 20px;
          background-color: #fff; /* Card background color */
          border-radius: 10px;
          box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .header {
          text-align: center;
          margin-bottom: 20px;
      }

      .main-host {
          background-color: #EFEFEF; 
          padding: 10px;
          border-radius: 5px;
      }

      .other-hosts {
          background-color: #F5F5F5;
          padding: 10px;
          border-radius: 5px;
      }

      .profile-cards {
          display: flex;
          justify-content: space-between;
          margin-bottom: 20px;
      }

      .profile-cards h2 {
          font-size: 18px;
          margin-bottom: 10px;
      }

      .profile-cards .host {
          margin-bottom: 10px;
      }

      .profile-cards .host-container {
          width: 80px;
          height: 80px;
          margin:10px;
      }


      .controls {
          display: flex;
          justify-content: center;
      }

      .controls button {
          margin: 0 10px;
          padding: 10px 20px;
          border: none;
          border-radius: 5px;
          cursor: pointer;
      }

      #mic-btn.active {
          background-color: #7CFC00; /* Light green when active */
      }
